{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2019",
      "dom",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@medium-stories/common": [
        "libs/common/src/index.ts"
      ],
      "@medium-stories/common/testing": [
        "libs/common/src/testing/index.ts"
      ],
      "@medium-stories/layouts": [
        "libs/layouts/src/index.ts"
      ],
      "@medium-stories/layouts/testing": [
        "libs/layouts/src/testing/index.ts"
      ],
      "@medium-stories/responsive": [
        "libs/responsive/src/index.ts"
      ],
      "@medium-stories/responsive/testing": [
        "libs/responsive/src/testing/index.ts"
      ],
      "@medium-stories/shared": [
        "libs/shared/src/index.ts"
      ],
      "@medium-stories/shared/testing": [
        "libs/shared/src/testing/index.ts"
      ],
      "@medium-stories/storage": [
        "libs/storage/src/index.ts"
      ],
      "@medium-stories/storage/testing": [
        "libs/storage/src/testing/index.ts"
      ],
      "@medium-stories/store": [
        "libs/store/src/index.ts"
      ],
      "@medium-stories/store/testing": [
        "libs/store/src/testing/index.ts"
      ],
      "@medium-stories/translation": [
        "libs/translation/src/index.ts"
      ],
      "@medium-stories/translation/testing": [
        "libs/translation/src/testing/index.ts"
      ],
      "@medium-stories/entities": [
        "libs/entities/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}